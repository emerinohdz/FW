# include common functions
@include "/etc/ferm.d/lib/common.ferm";

@def $DIR_FILTERS = "/etc/ferm.d/filters";

# POLICY
&POLICY(INPUT, DROP);
&POLICY(FORWARD, DROP);
&POLICY(OUTPUT, ACCEPT);

# ACCEPT LOCAL INCOMING CONNECTIONS
&INPUT(lo) ACCEPT;

# FILTERS AND ROUTING RULES
@include "/etc/ferm.d/tools/rules_creator.sh $DIR_FILTERS|";
